{
    "headers": [
      {
        "source": "/(.*)",
        "headers" : [
          {
            "key" : "X-Content-Type-Options",
            "value" : "nosniff"
          },
          {
            "key" : "X-Frame-Options",
            "value" : "DENY"
          },
          {
            "key" : "X-XSS-Protection",
            "value" : "1; mode=block"
          },
          {
            "key" : "Content-Security-Policy",
            "value" : "frame-ancestors 'none'"
          },
          {
            "key" : "Referrer-Policy",
            "value" : "no-referrer"
          },
          {
            "key" : "Permissions-Policy",
            "value" : "geolocation=(), microphone=()"
          }
        ]
      }
    ]
}